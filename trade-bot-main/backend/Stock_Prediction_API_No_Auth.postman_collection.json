		{
			"name": "3. Predict - Single Symbol",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"symbols\": [\"RELIANCE.NS\"],\n  \"horizon\": \"intraday\"\n}"
				},
				"url": {
					"raw": "http://localhost:5000/tools/predict",
					"protocol": "http",
					"host": ["localhost"],
					"port": "8000",
					"path": ["tools", "predict"]
				},
				"description": "Get prediction for a single stock symbol.\n\nHorizons:\n- intraday: 1 day ahead\n- short: 3-5 days ahead\n- long: 10-15 days ahead"
			},
			"response": []
		},
